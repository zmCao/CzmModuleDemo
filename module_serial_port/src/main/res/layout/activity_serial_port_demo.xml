<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="wrap_content"
                android:text="串口:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp" />

            <EditText
                android:id="@+id/edt_ck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ttyS4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="wrap_content"
                android:text="波特率:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp" />

            <EditText
                android:id="@+id/edt_btl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="115200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="wrap_content"
                android:text="发送内容："
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_20sp" />

            <EditText
                android:id="@+id/main_send_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAFA21010200010111111111FBFB" />
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rBtn_string"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_50dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:checked="true"
                android:text="字符" />

            <RadioButton
                android:id="@+id/rBtn_hex"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_50dp"
                android:text="HEX" />
        </RadioGroup>

        <Button
            android:id="@+id/main_send_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送" />

        <Button
            android:id="@+id/btn_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除接收内容" />

        <TextView
            android:id="@+id/main_recive_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_10dp"
            android:hint="接收的内容"
            android:minHeight="@dimen/size_100dp" />

        <Button
            android:id="@+id/main_recive_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启接收" />

        <Button
            android:id="@+id/main_stop_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止接收" />

    </LinearLayout>
</ScrollView>